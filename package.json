{
  "name": "tomate-cli",
  "version": "1.0.0",
  "description": "A simpl CLI pomodoro app",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsc && copyfiles -u 1 \"src/assets/**/*.{mp3,wav}\" dist",
    "start": "node ./dist/main.js",
    "clean": "rm -rf dist",
    "dev": "npm run clean && npm run build && npm run start"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "pomodoro",
    "typescript"
  ],
  "author": "Pierre Feilles <pierre.feilles@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.13",
    "copyfiles": "^2.4.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "cli-cursor": "^5.0.0",
    "dotenv": "^16.4.7",
    "ts-node": "^10.9.2"
  }
}
