{
  "name": "tomate-cli",
  "version": "0.0.2",
  "description": "A simple CLI pomodoro app",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsc && copyfiles -u 1 \"src/assets/**/*.{mp3,wav}\" dist",
    "start": "node ./dist/main.js",
    "clean": "rm -rf dist",
    "dev": "npm run clean && npm run build && npm run start",
    "reset-config": "node ./dist/main.js --reset-config",
    "manual-test": "node ./dist/test-state.js",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "pomodoro",
    "typescript"
  ],
  "author": "Pierre Feilles <pierre.feilles@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "cli-cursor": "^5.0.0",
    "dotenv": "^16.4.7",
    "ts-node": "^10.9.2",
    "zod": "^3.24.3"
  }
}
